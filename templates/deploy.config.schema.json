{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ConfigOptions",
  "type": "object",
  "properties": {
    "host": {
      "type": "string",
      "description": "SSH 服务器地址"
    },
    "port": {
      "type": "number",
      "description": "SSH 端口号（非必填），默认 22",
      "default": 22
    },
    "username": {
      "type": "string",
      "description": "SSH 用户名"
    },
    "password": {
      "type": "string",
      "description": "SSH 密码（非必填），如果 password 和 privateKey 都不存在，则连接服务器时，会提示输入密码"
    },
    "privateKey": {
      "type": "string",
      "description": "SSH 私钥路径（非必填），优先级高于密码"
    },
    "target": {
      "type": "string",
      "description": "本地项目 dist 路径"
    },
    "remoteDir": {
      "type": "string",
      "description": "服务器目标路径"
    },
    "backupDir": {
      "type": "string",
      "description": "备份路径（非必填），只能备份在本地，默认 target 同级目录下的 backups 文件夹"
    },
    "autoBackup": {
      "type": "boolean",
      "description": "是否自动备份（非必填），默认 true",
      "default": true
    },
    "autoClean": {
      "type": "boolean",
      "description": "是否自动清理服务器资源（非必填），默认 false",
      "default": false
    },
    "deployedCommands": {
      "type": "array",
      "description": "部署后执行的命令（非必填）",
      "items": {
        "type": "string"
      }
    },
    "tasks": {
      "type": "array",
      "description": "部署任务列表",
      "items": {
        "type": "object",
        "properties": {
          "target": {
            "type": "string",
            "description": "本地项目 dist 路径"
          },
          "remoteDir": {
            "type": "string",
            "description": "服务器目标路径"
          },
          "backupDir": {
            "type": "string",
            "description": "备份路径（非必填），只能备份在本地，默认 cwd 目录下的 backups 文件夹"
          },
          "autoBackup": {
            "type": "boolean",
            "description": "是否自动备份（非必填），默认 true",
            "default": true
          },
          "autoClean": {
            "type": "boolean",
            "description": "是否自动清理服务器资源（非必填），默认 false",
            "default": false
          },
          "deployedCommands": {
            "type": "array",
            "description": "部署后执行的命令（非必填），多个命令将使用 && 拼接",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["target", "remoteDir"]
      }
    }
  },
  "required": ["target", "remoteDir", "host", "username"]
}
